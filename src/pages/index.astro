---
import '../css/font-awesome.css';
import '../css/bootstrap.css';
import '../css/styles.css';
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link
        rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>👨🏻‍💻</text></svg>"
    />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <title>MikeDevs</title>
  </head>
  <body>
    <div class='container p-5'>
      <!--Header-->
      <header class="text-center mt-5">
        <h1 class='text-primary'>MikeDevs 👨🏻‍💻</h1>
        <div class="d-flex align-items-center justify-content-center">
          <a href="https://github.com/m-pabon" class="p-2"><i class="fa-brands fa-github text-light"></i></a>
          <a href="https://sailship.dev" class="p-2"><i class="fa-solid fa-sailboat text-light"></i></a>
          <a href="https://www.youtube.com/channel/UCNnH0cYzd-q6AXhI1NblCZw" class="p-2"><i class="fa-brands fa-youtube text-light"></i></a>
        </div>
      </header>
      <!--Blog-->
      <section class="mt-5 mb-4">
        <h3>📝 Topics</h3>
        <ul class="list-unstyled headlines mt-2 ps-4">
          <li><a href="" class="text-decoration-none text-light">Building with Astro</a></li>
          <li><a href="" class="text-decoration-none text-light">Strapi CMS</a></li>
        </ul>
      </section>
      <hr class="border border-primary">
      <!--Projects-->
      <section class="mt-4 mb-4">
        <h3>🛠 Projects</h3>
        <ul class="list-unstyled headlines mt-2 ps-4">
          <li>🚧 <a href="https://soulsbuild.com" class="text-decoration-none text-light">souls-build</a></li>
          <li>✅ <a href="https://github.com/Ship-Sail/astro-bootstrap-starter" class="text-decoration-none text-light">Astro + Bootstrap Starter Kit</a></li>
        </ul>
      </section>
      <hr class="border border-primary">
      <!--Publications-->
      <section class="mt-4 mb-4">
        <h3>🗞 Publications</h3>
        <ul class="list-unstyled headlines mt-2 ps-4">
          <li><a href="" class="text-decoration-none text-light">Introduction to Software Engineering</a></li>
        </ul>
      </section>
      <hr class="border border-primary">
      <!--Courses-->
      <section class="mt-4 mb-4">
        <h3>📚 Courses</h3>
        <ul class="list-unstyled headlines mt-2 ps-4">
          <li><a href="" class="text-decoration-none text-light">TBD</a></li>
        </ul>
      </section>
      <hr class="border border-primary">
    </div>

    <script src='../js/bootstrap.bundle.min.js'></script>
    <script src='../js/script.js'></script>
  </body>
</html>
